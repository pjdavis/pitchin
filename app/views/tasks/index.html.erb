<h1>Listing tasks</h1>

<table>
  <tr>
    <th>Project</th>
    <th>Name</th>
    <th>Requestor</th>
    <th>Requested at</th>
    <th>Due at</th>
    <th>Expires at</th>
    <th>Status</th>
  </tr>

<% for task in @tasks %>
  <tr>
    <td><%=h task.project_id %></td>
    <td><%=h task.name %></td>
    <td><%=h task.requestor_id %></td>
    <td><%=h task.requested_at %></td>
    <td><%=h task.due_at %></td>
    <td><%=h task.expires_at %></td>
    <td><%=h task.status_id %></td>
    <td><%= link_to 'Show', task %></td>
    <td><%= link_to 'Edit', edit_task_path(task) %></td>
    <td><%= link_to 'Destroy', task, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New task', new_task_path %>
